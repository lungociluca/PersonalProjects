<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="Nr of clients      "/>
   <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Nr of queues       "/>
   <Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="Simulation interval"/>
   <Label GridPane.rowIndex="3" GridPane.columnIndex="0" text="Min arrival time   "/>
   <Label GridPane.rowIndex="4" GridPane.columnIndex="0" text="Max arrival time   "/>
   <Label GridPane.rowIndex="5" GridPane.columnIndex="0" text="Min service time   "/>
   <Label GridPane.rowIndex="6" GridPane.columnIndex="0" text="Max service time   "/>

   <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="T1"/>
   <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="T2"/>
   <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="T3"/>
   <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="T4"/>
   <TextField GridPane.rowIndex="4" GridPane.columnIndex="1" fx:id="T5"/>
   <TextField GridPane.rowIndex="5" GridPane.columnIndex="1" fx:id="T6"/>
   <TextField GridPane.rowIndex="6" GridPane.columnIndex="1" fx:id="T7"/>

   <Label GridPane.rowIndex="7" GridPane.columnIndex="0" text=""/>
   <Label GridPane.rowIndex="8" GridPane.columnIndex="0" text="Choose queue with minimum time" GridPane.columnSpan="2" fx:id="strategy" />
   <Button GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2" text="Change strategy" onAction="#changeStrategy"/>

   <Button GridPane.rowIndex="10" GridPane.columnIndex="0" text="Start" onAction="#start"/>
   <Button GridPane.rowIndex="10" GridPane.columnIndex="1" text="Sop" onAction="#endSimulation"/>
   <Label GridPane.rowIndex="11" GridPane.columnIndex="0" GridPane.columnSpan="2" text="" fx:id="label"/>
   <TextArea GridPane.rowIndex="12" GridPane.columnIndex="0" GridPane.columnSpan="2" text="" fx:id="area"/>
</GridPane>
